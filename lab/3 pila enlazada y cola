#include <iostream>
struct nodo {
	int A[5];
	int* top=A;
	nodo* next=NULL;
};
struct nodoCola {
	int A[5];
	int* tail = A;
	nodoCola* next = NULL;

};
struct LinkedPile {

	nodo* h=0;
	void push(int v) {
		if (!h) {
			h = new nodo;
			*(h->top) = v;
			h->top++;
		}
		else {
			if (h->top < ((h->A) + 5)) {
				*(h->top) = v;
				h->top++;
			}
			else {
				nodo* tmp = new nodo;
				*(tmp->top) = v;
				tmp->next = h;
				h = tmp;
				h->top++;
			}
		}
		
	}
};
struct LinkedCola {
	nodoCola* h = 0;
	nodoCola* t = 0;
	void push(int v) {
		if (!h) {
			h = new nodoCola;
			t=h;
			*(h->tail) = v;
			h->tail++;
		}
		else {
			if (t->tail < ((t->A) + 5)) {
				*(t->tail) = v;
				t->tail++;
			}
			else {
				nodoCola* tmp = new nodoCola;
				*(tmp->tail) = v;
				tmp->tail++;
				t->next = tmp;
				t = t->next;
			}
		}
	}
};
void printpila(nodo*a) {
	
	for (nodo* p = a;p;p = p->next) {
		for (int* q = p->top-1;q >= p->A;q--)
			std::cout << *q<< " ";
	}
	std::cout << std::endl;

}
void printCola(nodoCola* a) {
	for (nodoCola* p = a;p;p = p->next) {
		for (int* q = p->A;q < p->tail;q++)
			std::cout << *q << " ";
	}
	std::cout<<std::endl;

}
int main()
{
	
	LinkedPile pp;
	pp.push(1);
	pp.push(2);
	pp.push(3);

	pp.push(3);
	pp.push(3);
	pp.push(3);

	pp.push(5);
	pp.push(5);
	pp.push(5);

	printpila(pp.h);
	
	LinkedCola c;
	c.push(1);
	c.push(2);
	c.push(3);

	c.push(3);
	c.push(3);
	c.push(3);

	c.push(5);
	c.push(5);
	c.push(5);


	printCola(c.h);
}
